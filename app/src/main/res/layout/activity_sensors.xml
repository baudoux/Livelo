<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.livelo.livelo.sensors">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <ScrollView
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <ListView
                        android:id="@+id/sensorsListView"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent" />
                </LinearLayout>
            </ScrollView>
        </LinearLayout>
    </ScrollView>

    <Button
        android:id="@+id/new_sensor_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:onClick="goto_new_sensor"
        android:text="New"
        android:textColor="#000000"
        android:layout_alignParentBottom="true"
        android:layout_alignParentStart="true"
        android:layout_toStartOf="@+id/button_search_location" />

    <ImageButton
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/button_search_id"
        android:src="@android:drawable/ic_menu_search"
        android:layout_alignTop="@+id/new_sensor_button"
        android:layout_alignParentEnd="true" />

    <ImageButton
        android:id="@+id/button_search_location"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:onClick="goto_map"
        android:src="@android:drawable/ic_menu_mylocation"
        android:layout_alignTop="@+id/button_search_id"
        android:layout_toStartOf="@+id/button_search_id" />

    <!--ListView
        android:id="@+id/list"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_above="@+id/new_sensor_button" /-->
</RelativeLayout>
